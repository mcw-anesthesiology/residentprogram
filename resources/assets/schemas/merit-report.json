{
	"$id": "https://www.residentprogram.com/schemas/merit-report.json#",
	"title": "Merit Report Checklist",
	"type": "object",
	"properties": {
		"pages": {
			"type": "array",
			"items": {
				"$ref": "#/definitions/section"
			}
		}
	},
	"required": [
		"pages"
	],
	"definitions": {
		"scoringDefinition": {
			"title": "Scoring definition",
			"type": "object",
			"properties": {
				"category": {"type": "string"},
				"max": {"type": "number"},
				"weight": {"type": "number"}
			},
			"required": [
				"category"
			]
		},
		"section": {
			"title": "Section",
			"type": "object",
			"properties": {
				"type": {"const": "section"},
				"title": {"type": "string"},
				"items": {
					"type": "array",
					"items": {
						"oneOf": [
							{"$ref": "#/definitions/section"},
							{"$ref": "#/definitions/item"},
							{"$ref": "#/definitions/instruction"}
						]
					}
				}
			},
			"required": ["type", "items"]
		},
		"instruction": {
			"title": "Instruction block",
			"type": "object",
			"properties": {
				"type": {"const": "instruction"},
				"text": {"type": "string"}
			}
		},
		"item": {
			"title": "Checklist item",
			"type": "object",
			"properties": {
				"type": {"const": "item"},
				"text": {"type": "string"},
				"checked": {"type": "boolean"},
				"subjectReadonly": {"type": "boolean"},
				"questions": {
					"type": "array",
					"items": {
						"$ref": "https://www.residentprogram.com/schemas/questionnaire.json#/definitions/question"
					}
				},
				"scoring": {
					"$ref": "#/definitions/scoringDefinition"
				}
			},
			"required": ["type", "text"]
		}
	}
}
