{
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module"
	},
	"env": {
		"browser": true,
		"es6": true,
		"jquery": true
	},
	"plugins": ["vue"],
	"extends": "eslint:recommended",
	"rules": {
		"no-console": "off",
		"no-var": "warn",
		"eqeqeq": ["warn", "smart"],
		"semi": ["warn", "always"],
		"no-spaced-func": "warn",
		"comma-style": "warn",
		"comma-spacing": "warn",
		"key-spacing": "warn"
	}
}
