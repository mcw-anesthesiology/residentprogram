{
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module"
	},
	"env": {
		"browser": true,
		"es6": true,
		"jquery": true
	},
	"plugins": ["vue", "compat"],
	"extends": "eslint:recommended",
	"rules": {
		"no-console": "off",
		"no-var": "warn",
		"eqeqeq": ["warn", "smart"],
		"semi": ["warn", "always"],
		"no-spaced-func": "warn",
		"comma-style": "warn",
		"comma-spacing": "warn",
		"key-spacing": "warn",
		"compat/compat": 2
	},
	"settings": {
		"polyfills": [
			"promise",
			"fetch",
			"dataset"
		],
		"coverage": false,
		"compiler": "babel"
	}
}
