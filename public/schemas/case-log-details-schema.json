{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Case Log Details Schema",
	"type": "array",
	"items": {
		"title": "Section",
		"description": "Section of form, displayed as a panel",
		"type": "object",
		"properties": {
			"title": {"type": "string"},
			"subsections": {
				"type": "array",
				"items": {
					"$ref": "#/definitions/subsection"
				}
			}
		},
		"required": "subsections"
	},
	"definitions": {
		"subsection": {
			"title": "Subsection",
			"type": "object",
			"properties": {
				"title": {"type": "string"},
				"name": {"type": "string"},
				"report": {"$ref": "#/definitions/stringBool"},
				"inputs": {
					"type": "array",
					"items": {
						"$ref": "#/definitions/input"
					}
				}
			},
			"required": ["name", "inputs"]
		},
		"input": {
			"title": "Input",
			"type": "object",
			"oneOf": [
				{"$ref": "#/definitions/checkbox"},
				{"$ref": "#/definitions/text"}
			]
		},
		"checkbox": {
			"properties": {
				"type": {"enum": ["checkbox"]},
				"label": {"type": "string"},
				"name": {"type": "string"},
				"properties": {"$ref": "#/definitions/properties"}
			},
			"required": ["type", "label"]
		},
		"text": {
			"properties": {
				"type": {"enum": ["text"]},
				"label": {"type": "string"},
				"name": {"type": "string"},
				"placeholder": {"type": "string"},
				"properties": {"$ref": "#/definitions/properties"},
				"report": {"type": "boolean", "default": false}
			},
			"required": ["type", "label"]
		},
		"properties": {
			"type": "array",
			"items": {
				"$ref": "#/definitions/property"
			}
		},
		"property": {
			"enum": ["required", "readonly", "selected"]
		},
		"stringBool": {
			"enum": ["true", "false"],
			"default": "false"
		}
	}
}
